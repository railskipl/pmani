

        <section id="tables">     
          
          <div class="row-fluid">
          <div class="span6">
          <h3>Consumers Readings</h3>
          </div>
          
          <div class="span6" style="text-align:right">
          
          <%= link_to image_tag('/assets/excel.png') + "Excel", consumers_path(params.merge(format: "xls")), :class => 'btn btn-secondary' %>
          <%= link_to image_tag('/assets/pdf.png') + "PDF", consumers_path(params.merge(format: "pdf")), :class => 'btn btn-secondary' %>
          
          </div>
          
          
          
          </div>
          
          <table class="table table-bordered table-striped table-highlight">
            <thead>
             <tr>
              <th>Name</th>
              <th>Sub zone</th>
              <th>Zone</th>
              <th>Image</th>
              <th colspan=3>Actions </th>              
             </tr>
            </thead>


          <% @consumers.each do |consumer| %>
            <tr>
              <td><%= consumer.name %></td>
              <td><%= consumer.sub_zone_id %></td>
              <td><%= consumer.sub_zone.zone.zone_name rescue nil %></td>
              <td><%= image_tag consumer.image.url ,:class => "img1" rescue nil %></td>
              <td>
              <%= link_to "Show",consumer, :class=>"btn" %>
              <%= link_to "Edit", main_app.edit_consumer_path(consumer), :class=>"btn" %>
              <%= link_to "Destroy",consumer,confirm: 'Are you sure?', :method =>:delete, :class=>"btn" %>
              </td>
              
              
            </tr>
           <% end %>
          </table>  
           <td>
            <%= link_to "New Consumer", main_app.new_consumer_path, :class=>"btn",:style => "float:left" %>
           </td>
                   
          
        </div> <!-- /widget-content -->
          
      </div> <!-- /widget -->
          
      </div>
        
      </div> <!-- /row -->

    </div> <!-- /container -->
    
</div> <!-- /main -->
