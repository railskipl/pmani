
 
<div class="main">

    <div class="container">
    

      <div class="row">
        
       <div class="span12">          
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
               <h3>Consumers Readings</h3>
            </div>

            <div class="widget-content">
        
        
         <section id="tables">     
          
          
          <div class="row-fluid" style="margin-bottom:10px">
          <td>
            <%= link_to "New Consumer", main_app.new_consumer_path, :class=>"btn btn-secondary",:style => "float:left" %>
           </td>
          <div class="span10" style="text-align:right">
          
          <%= link_to image_tag('/assets/img/excel.png') + " Excel", consumers_path(params.merge(format: "xls")), :class => 'btn btn-secondary' %>
          <%= link_to image_tag('/assets/img/pdf.png') + " PDF", consumers_path(params.merge(format: "pdf")), :class => 'btn btn-secondary' %>
          
          </div>
          
          
          
          </div>
          
          <table class="table table-bordered table-striped table-highlight">
            <thead>
             <tr>
              <th>Name</th>
              <th>Zone</th>
              <th>Sub zone</th>
              <th>Image</th>
              <th colspan=3>Actions </th>              
             </tr>
            </thead>


          <% @consumers.each do |consumer| %>
            <tr>
              <td><%= consumer.name %></td>
              <td><%= consumer.zone.zone_name rescue nil %></td>
              <td><%= consumer.sub_zone.name rescue nil %></td>
              <td><% unless consumer.image.url.nil? %><%= image_tag consumer.image.url, :width=>"200" rescue nil %> <% else %> No Image <% end %></td>
              <td>
              <%= link_to "Show",consumer, :class=>"btn" %>
              <%= link_to "Edit", main_app.edit_consumer_path(consumer), :class=>"btn" %>
              <%= link_to "Destroy",consumer,confirm: 'Are you sure?', :method =>:delete, :class=>"btn" %>
              </td>
              
              
            </tr>
           <% end %>
          </table>  
           
          <%= will_paginate @consumers,renderer: BootstrapPagination::Rails %>     
          
        </div> <!-- /widget-content -->
          
      </div> <!-- /widget -->
          
      </div>
        
  
    </div> <!-- /container -->
    
</div> <!-- /main -->
