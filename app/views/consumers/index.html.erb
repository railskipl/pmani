 

        <section id="tables">     
          
          <div class="row-fluid">
          <div class="span6">
          <h3>Consumers Readings</h3>
          </div>
          
          <div class="span6" style="text-align:right">
          <a href="#" class="btn btn-secondary"><img src="img/excel.png" alt=""> Excel</a> <a href="#" class="btn btn-secondary"><i class="icon"><img src="img/pdf.png" alt=""></i> PDF</a>
          </div>
          <%= link_to 'New Consumer', new_consumer_path ,:style => "float:left" %>
          
          
          </div>
          
          <table class="table table-bordered table-striped table-highlight">
            <thead>
             <tr>
              <th>Name</th>
              <th>Sub zone</th>
              <th>Zone</th>
              <th>Image</th>
              <th colspan=3>Actions </th>              
             </tr>
            </thead>

          <% @consumers.each do |consumer| %>
            <tr>
              <td><%= consumer.name %></td>
              <td><%= consumer.sub_zone_id %></td>
              <td><%= consumer.sub_zone.zone.zone_name rescue nil %></td>
              <td><%= image_tag consumer.image.url ,:class => "img1" rescue nil %></td>
               <!-- <td><a href="show" class="btn btn-primary">Show</a> -->
              <td><%= link_to 'Show', consumer %></td>
              <td><%= link_to 'Edit', edit_consumer_path(consumer) %></td>
              <td><%= link_to 'Destroy', consumer, confirm: 'Are you sure?', method: :delete %></td>
            </tr>
          <% end %>
            </table>          
          
        </div> <!-- /widget-content -->
          
      </div> <!-- /widget -->
          
