
 
<div class="main">

    <div class="container">

      <div class="row">
        
       <div class="span12">          
          
          <div class="widget stacked ">
            


            <div class="widget-header">
              <i class="icon-pencil"></i>
               <h3>Listing Readers</h3>
            </div>

            <div class="widget-content">
        <td><%= link_to "New Reader", main_app.new_reader_path, :class=>"btn btn-success",:style => "float:left" %></td>
        
         <section id="tables">     
          
          
          <div class="row-fluid" style="margin-bottom:10px">         
          
          </div>

<table class="table table-bordered table-striped table-highlight">
<thead>
  <tr>
    <th>Reader</th>
    <th>Zone</th>
    <th>MRU</th>
    <th colspan=3>Actions </th>  
    
  </tr>
  </thead>



<% @readers.each do |reader| %>
  <tr>
    <td><%= reader.user.name %></td>
    <td><%= reader.zone.zone_name rescue nil %></td>
    <td><%= reader.sub_zone.name rescue nil %></td>
    <td>
      <%= link_to "Show",reader, :class=>"btn" %>
      <%= link_to "Edit", main_app.edit_reader_path(reader), :class=>"btn" %>
      <%= link_to "Destroy",reader,confirm: 'Are you sure?', method: :delete, :class=>"btn" %>
    </td>

    
  </tr>
<% end %>
</table>
 
<%= will_paginate @readers,renderer: BootstrapPagination::Rails %>

<br />
</div>


