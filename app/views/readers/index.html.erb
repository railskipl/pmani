<div class="container">

<h1>Listing readers</h1>

<table class="table table-bordered table-striped table-highlight">
<thead>
  <tr>
    <th>Reader</th>
    <th>Zone</th>
    <th>Sub zone</th>
    <th colspan=3>Actions </th>  
    
  </tr>
  </thead>



<% @readers.each do |reader| %>
  <tr>
    <td><%= reader.user.name %></td>
    <td><%= Zone.find(reader.zone_id).zone_name rescue nil %></td>
    <td><%= SubZone.find(reader.sub_zone_id).name rescue nil %></td>
    <td>
      <%= link_to "Show",reader, :class=>"btn" %>
      <%= link_to "Edit", main_app.edit_reader_path(reader), :class=>"btn" %>
      <%= link_to "Destroy",reader,confirm: 'Are you sure?', method: :delete, :class=>"btn" %>
    </td>

    
  </tr>
<% end %>
</table>
 <td><%= link_to "New Reader", main_app.new_reader_path, :class=>"btn",:style => "float:left" %></td>


<br />
</div>


